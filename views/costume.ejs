<!DOCTYPE html>
<html>
  <head>
    <link rel="icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PGR Coatings</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body>
    <header class="row">
      <%- include('./partials/header.ejs'); %>
    </header>
    <main class="container">
      <div class="row"> 
        <div class="col-4 col-lg-2"><h2><%=allCost.frameName%><small class="text-muted"> <%=allCost.charaName%></small></h2></div>
        <div class="col-2"> <%- include('./partials/modifyBtn.ejs', {link: ["chara", allCost._id]}); %></div>
      </div>
      <div class="row">
        <div class="col-4 col-lg-2">
          <h3><%= currCost.skinName %></h3>
        </div>
        <div class="col-2"> <%- include('./partials/modifyBtn.ejs', {link: ["costume", allCost._id, currCost._id]}); %></div>
      </div>
      <div class="row align-items-start">
        <div class="col">
          <h4>Price</h4>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Price</th>
                <th scope="col">Currency</th>
                <th scope="col">Comment</th>
              </tr>
            </thead>
            <tbody>
              <% currCost.price.forEach(function(val) { %> 
                <tr>
                  <td>
                    <%- include('./partials/modifyBtn.ejs', {link: ["price", allCost._id, currCost._id, val._id]}); %>
                  </td> 
                  <% if (val.value) { %> 
                    <td><%= val.value %> </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <% if (val.currency) { %> 
                    <td><%= val.currency %> </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <% if (val.name) { %> 
                    <td><%= val.name %> </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <div class="col">
          <h5>Event</h5>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Region</th>
                <th scope="col">Start </th>
                <th scope="col">Finish</th>
                <th scope="col">Rerun</th>
                <th scope="col">Discounted</th>
                <th scope="col">Comment</th>
              </tr>
            </thead>
            <tbody>
              <% currCost.event.forEach(function(val){ %> 
                <tr>
                  <td>
                    <%- include('./partials/modifyBtn.ejs', {link: ["event", allCost._id, currCost._id, val._id]}); %>
                  </td>
                  <td> <%= val.region %> </td>
                  <% if (val.start) { %> 
                    <td><%= val.start %> </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <% if (val.finish) { %> 
                    <td><%= val.finish %> </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <% if (val.rerun) { %> 
                    <td>☑️ </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <% if (val.disc) { %> 
                    <td>☑️ </td> 
                  <% } else { %>
                    <td> - </td>
                  <% } %>
                  <td> <%= val.name %> </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row align-items-center">
        <div class="btn-group" role="group">
          <% allCost.costumes.forEach(function(costume){ %> 
            <a href= <%= "../../costumes/" + encodeURI(allCost.frameName) + "/" + costume._id.toString()%> class="btn btn-primary" > <%= costume.skinName %> </a>
          <% }); %>
        </div>
      </div>
    </main>
    <%- include('./partials/deleteModal.ejs') %>
    <script>
      function passData(url, name) {
        let form = document.getElementById("delet");
        form.action = url;
        let text = document.getElementById("hack");
        text.innerHTML = `ARE YOU SURE YOU WANT TO DELETE THIS ${name.toUpperCase()}?<br>THIS CANNOT BE UNDONE! (for now)`;
      }
    </script>
  </body>
</html>
